@{
    ViewData["Title"] = "List";
}

@model AzzanOrder.ManagerOwner.Models.Model

<h1 class="h3 mb-3">Employee Management</h1>

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">List Employee</h5>
        </div>
        <div class="card-body">
            <div>
                <a href="@Url.Action("Add", "Employee")" class="btn btn-primary">Add New Employee</a>
            </div>
            <br />
            <table id="myTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width:5%">No.</th>
                        <th style="width:20%">Employee Name</th>
                        <th style="width:20%">Phone Number</th>
                        <th class="d-none d-md-table-cell" style="width:20%">Email</th>
                        <th class="d-none d-md-table-cell" style="width:10%">Role</th>
                        <th class="d-none d-md-table-cell" style="width:10%">Gender</th>
                        <th class="d-none d-md-table-cell" style="width:20%">Date of Birth</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int position = 1;
                    }
                    @foreach (var item in Model.employees)
                    {
                        <tr>
                            <td>
                                @position
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td class="d-none d-md-table-cell">
                                @Html.DisplayFor(modelItem => item.Gmail)
                            </td>
                            <td class="d-none d-md-table-cell">
                                @Html.DisplayFor(modelItem => item.Role.RoleName)
                            </td>
                            <td class="d-none d-md-table-cell">
                                @(item.Gender.HasValue && item.Gender.Value ? "Male" : "Female")
                            </td>
                            <td class="d-none d-md-table-cell">
                                @Html.DisplayFor(modelItem => item.BirthDate)
                            </td>
                            <td class="table-action">
                                <a asp-action="Update" asp-route-id="@item.EmployeeId"><i class="align-middle" data-feather="edit-2"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.EmployeeId"><i class="align-middle" data-feather="trash"></i></a>
                                @* <a href="@Url.Action("Delete", "Employee")"><i class="align-middle" data-feather="trash"></i></a> *@
                            </td>
                        </tr>
                        position++;
                    }
                </tbody>
            </table>

        </div>

        
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />

<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>