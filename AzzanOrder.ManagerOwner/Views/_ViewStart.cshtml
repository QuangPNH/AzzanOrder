@using AzzanOrder.ManagerOwner.Services
@inject EmployeeService EmployeeService
@{
    var path = Context.Request.Path.ToString().ToLower();

    if (path.Contains("/login") || path.Contains("/subscribe"))
    {
        Layout = "_LayoutEmpty";
    }
    
    else
    if (EmployeeService.CurrentEmployee != null)
    {
        Layout = "_LayoutManager";
    }
    else
    if (EmployeeService.CurrentOwner != null || path.Contains("/subscribeextension"))
    {
        Layout = "_LayoutOwner";
    }
    else
    {
        Layout = "_LayoutEmpty";
    }
}