@model AzzanOrder.ManagerOwner.Models.Model

<h1 class="h3 mb-3">Table Management</h1>

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">ListTable</h5>
        </div>
        <div class="card-body">
            <div>
                <a href="@Url.Action("Add", "Table")" class="btn btn-primary">Add New Table</a>
            </div>
            <br />
            <table id="myTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width:10%">No.</th>
                        <th style="width:50%">QR code</th>
                        <th style="width:30%">Table Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int position = 1;
                    }
                    @foreach (var table in Model.tables)
                    {
                        <tr>
                            <td>@position</td>
                            <td>@table.Qr</td>
                            <td>@(table.Status == true ? "Open" : "Closed")</td>
                            <td class="table-action">
                                <a href="@Url.Action("Update", "Table", new { id = table.TableId })"><i class="align-middle" data-feather="edit-2"></i></a>
                                <a href="@Url.Action("Delete", "Table", new { id = table.TableId })"><i class="align-middle" data-feather="trash"></i></a>
                            </td>
                        </tr>
                        position++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />

<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>