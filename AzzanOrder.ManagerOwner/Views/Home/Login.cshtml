@model AzzanOrder.ManagerOwner.Models.Model

@{
	ViewData["Title"] = "Login page";
}



<div class="container d-flex flex-column">
	<div class="row vh-100">
		<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
			<div class="align-middle">

				<div class="text-center mt-4">
					<h1 class="h2">Welcome to the system</h1>
					<p class="lead">
						Sign in to your account to continue
					</p>
				</div>

				<div class="card">
					<div class="card-body">
						<div class="m-sm-4">
							<form asp-action="LoginAction" asp-controller="Home" method="post" enctype="multipart/form-data">
								<div class="mb-3">
									<label class="form-label">Phone</label>
									<input asp-for="employee.Phone" class="form-control form-control-lg" type="phone" name="phone" placeholder="Enter your phone" />
								</div>
								<div class="col-sm-10">
								<label for="roleSelect">Choose a role:</label>
										<select id="roleSelect" name="role">
											<option value="owner">Owner</option>
											<option value="manager">Manager</option>
										</select>
								</div>
								<div class="text-center mt-3">
									@* <a href="@Url.Action("List", "Employee")" class="btn btn-lg btn-primary">Sign in</a> *@
									<button type="submit" class="btn btn-lg btn-primary">Sign in</button>
								</div>
								
								<div class="text-center mt-3">
									<a href="@Url.Action("Subscribe", "Home")" class="btn btn-lg btn-primary">Subcribe</a>
									
								</div>
							</form>
							<br />
							@if (TempData["Message"] != null)
							{
								<div class="alert alert-warning">
									@TempData["Message"]
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
