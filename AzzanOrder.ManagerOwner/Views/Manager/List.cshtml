@model AzzanOrder.ManagerOwner.Models.Model
<h1 class="h3 mb-3">Manager Management</h1>

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">List Manager</h5>
        </div>
        <div class="card-boby">
            <div style="margin-left:15px">
                <a href="@Url.Action("Add", "Manager")" class="btn btn-primary">Add New Manager</a>
            </div>
            <br/>
            <div class="card-body">
                <table id="myTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="width:5%">No.</th>
                            <th style="width:20%">Employee Name</th>
                            <th style="width:20%">Phone Number</th>
                            <th class="d-none d-md-table-cell" style="width:20%">Email</th>
                            <th class="d-none d-md-table-cell" style="width:20%">Date of Birth</th>
                            <th>Menu</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int position = 1;
                        }
                        @foreach (var emp in Model.employees)
                        {
                            <tr>
                                <td>@position</td>
                                <td>@emp.EmployeeName</td>
                                <td>@emp.Phone</td>
                                <td class="d-none d-md-table-cell">@emp.Gmail</td>
                                <td class="d-none d-md-table-cell">@emp.BirthDate</td>
                                <td class="table-action">
                                    <a href="@Url.Action("MenuList", "Manager", new { id = emp.EmployeeId})">Link</a>
                                </td>
                                <td class="table-action">
                                    <a href="@Url.Action("Update", "Manager", new { id = emp.EmployeeId})"><i class="align-middle" data-feather="edit-2"></i></a>
                                    <a href="@Url.Action("Delete", "Manager", new { id = emp.EmployeeId})"><i class="align-middle" data-feather="trash"></i></a>
                                </td>
                            </tr>
                            position++;
                        }
                    </tbody>
                </table>
            </div>
           
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />

<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>