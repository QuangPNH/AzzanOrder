@model AzzanOrder.ManagerOwner.Models.Employee

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Update Manager</h5>
        </div>

        <div class="card-body">
            <form asp-action="UpdatePost" asp-controller="Manager" method="post">
                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2 text-sm-end">Employee ID</label>
                    <div class="col-sm-10">
                        <input asp-for="EmployeeId" class="form-control" readonly>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2 text-sm-end">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="EmployeeName" class="form-control" placeholder="Name">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2 text-sm-end">Phone</label>
                    <div class="col-sm-10">
                        <input asp-for="Phone" class="form-control" placeholder="Phone">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2 text-sm-end">Email</label>
                    <div class="col-sm-10">
                        <input asp-for="Gmail" class="form-control" placeholder="Email">
                    </div>
                </div>

                <fieldset class="mb-3">
                    <div class="row">
                        <label class="col-form-label col-sm-2 text-sm-end pt-sm-0">Gender</label>
                        <div class="col-sm-10">

                            @{
                                if (Model.Gender == true)
                                {
                                    <label class="form-check">
                                        <input asp-for="Gender" type="radio" class="form-check-input" value=true checked>
                                        <span class="form-check-label">Male</span>
                                    </label>
                                    <label class="form-check">
                                        <input asp-for="Gender" type="radio" class="form-check-input" value=false>
                                        <span class="form-check-label">Female</span>
                                    </label>
                                }
                                else
                                {
                                    <label class="form-check">
                                        <input asp-for="Gender" type="radio" class="form-check-input" value=true>
                                        <span class="form-check-label">Male</span>
                                    </label>
                                    <label class="form-check">
                                        <input asp-for="Gender" type="radio" class="form-check-input" value=false checked>
                                        <span class="form-check-label">Female</span>
                                    </label>
                                }
                            }


                        </div>
                    </div>
                </fieldset>

                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2 text-sm-end">Birthday</label>
                    <div class="col-sm-10">
                        <input asp-for="BirthDate" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy">
                        <span class="text-muted">DD/MM/YYYY format.</span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2 text-sm-end">Home Address</label>
                    <div class="col-sm-10">
                        <textarea asp-for="HomeAddress" class="form-control" placeholder="Home Address" rows="3"></textarea>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2 text-sm-end">Work Address</label>
                    <div class="col-sm-10">
                        <textarea asp-for="WorkAddress" class="form-control" placeholder="Work Address" rows="3"></textarea>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2 text-sm-end pt-sm-0">Image</label>
                    <div class="col-sm-10">
                        <input asp-for="Image" name="employeeImage" type="file" accept=".png, .jpg">
                        <small class="form-check-label text-muted">Only png and jpg allowed.</small>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-sm-10 ms-sm-auto">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>